{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015",
    "outDir": "./wwwroot/scripts",
    "experimentalDecorators": true,
    "allowJs": true,
    "moduleResolution": "node"
    //"esModuleInterop": true
  },
  "include": ["**/*"],
  "exclude": ["assets", "node_modules", "bower_components", "jspm_packages"]
}
